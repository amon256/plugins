<?xml version="1.0" encoding="UTF-8"?>
<!-- applications charset为系统编码，需要设置正确，否则输出的命令行会中文乱码 -->
<applications charset="gbk">
	<application>
		<!-- 应用编码 -->
		<id>winplan2</id>
		<name>winplan2</name>
		<commands>
			<!-- 升级部署本地命令 -->
			<command>
				<path>/usr/local/</path>
				<cmd>/usr/local/winplan2.sh</cmd>
				<params>
					<!-- 命令参数 -->
					<param>
						<name>versionFile</name>
						<value>${version.file}</value>
					</param>
					<param>
						<name>versionFileName</name>
						<value>${version.fileName}</value>
					</param>
					<param>
						<name>configFile</name>
						<value>${version.configFile}</value>
					</param>
					<param>
						<name>configFileName</name>
						<value>${version.configFileName}</value>
					</param>
				</params>
			</command>
		</commands>
		<statusCmd>
			<!-- 应用状态检测命令,直接写管道命令不能执行，需要将ps -ef | grep 8181 | grep tomcat写在sh中执行 -->
			<cmd>/usr/local/status/winplan2.sh</cmd>
			<include>tomcat</include>
		</statusCmd>
		<startCmd>
			<path>/usr/local/tomcat8080/bin</path>
			<cmd>./start.sh</cmd>
			<!-- 命令参数,可以为空 
			<params>
				<param>
					<name>paramName</name>
					<value>value</value>
				</param>
			</params>
			-->
		</startCmd>
		<stopCmd>
			<path>/usr/local/tomcat8080/bin</path>
			<cmd>./shutdown.sh</cmd>
			<!-- 命令参数,可以为空 
			<params>
				<param>
					<name>paramName</name>
					<value>value</value>
				</param>
			</params>
			-->
		</stopCmd>
	</application>
</applications>
